{
  "name": "apollo-server",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "test": "jest",
    "dev": "nodemon --exec ts-node src/index.ts",
    "debug": "nodemon --exec ts-node --inspect --debug-brk src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "generate": "graphql-codegen --config codegen.yml"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.9.1",
    "@graphql-codegen/introspection": "1.0.0",
    "@graphql-codegen/typescript": "1.0.0",
    "@graphql-codegen/typescript-resolvers": "1.0.0",
    "@types/cookie-session": "^2.0.37",
    "@types/jest": "^24.0.23",
    "@types/lodash": "^4.14.149",
    "@types/mongoose": "^5.5.34",
    "@types/node-fetch": "^2.5.4",
    "@types/passport": "^1.0.2",
    "@types/passport-google-oauth": "^1.0.41",
    "graphql": "^14.5.8",
    "jest": "^24.9.0",
    "nodemon": "^2.0.2",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.3"
  },
  "dependencies": {
    "@google-cloud/bigquery": "^4.7.0",
    "@graphql-modules/core": "^0.7.13",
    "@graphql-modules/di": "^0.7.13",
    "apollo-server-express": "^2.9.13",
    "cookie-session": "^1.3.3",
    "dataloader": "^2.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "googleapis": "^46.0.0",
    "lodash": "^4.17.15",
    "mongoose": "^5.8.0",
    "passport": "^0.4.1",
    "passport-google-oauth": "^2.0.0",
    "reflect-metadata": "^0.1.13"
  }
}
