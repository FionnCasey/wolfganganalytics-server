{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es6",
      "esnext",
      "es2015"
    ],
    "strict": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "files": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}